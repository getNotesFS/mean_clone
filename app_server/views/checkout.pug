extends layout


block content

    // Start Breadcrumb Part
    section.breadcrumb-part(data-stellar-offset-parent='true', data-stellar-background-ratio='0.5', style="background-image: url('images/breadbg1.jpg');")
        .container
            .breadcrumb-inner
                h2 SHOP CART
                a(href='/') Home
                span Shop
    // End Breadcrumb Part
    section.home-icon.shop-cart.bg-skeen
        .icon-default.icon-skeen
            img(src='images/images-scroll-arrow.png', alt='')
        .container
            .checkout-wrap.wow.fadeInDown(data-wow-duration='1000ms', data-wow-delay='300ms')
                ul.checkout-bar
                    li.done-proceed Shopping Cart
                    li.active Checkout
                    li Order Complete
            .row
                .col-md-7.col-sm-7.col-xs-12.wow.fadeInDown(data-wow-duration='1000ms', data-wow-delay='300ms')
                    .shop-checkout-left
                        h6
                            | Returning customer? Click here to 
                            a(href='login_register.html') login
                        form.form-checkout(name='form', method='post')
                            .row
                                .col-md-12.col-sm-12.col-xs-12
                                    h5 Billing Details
                                .col-md-6.col-sm-12.col-xs-12
                                    input(type='text', name='txt', placeholder='First Name')
                                .col-md-6.col-sm-12.col-xs-12
                                    input(type='text', name='txt', placeholder='Last Name')
                                .col-md-12.col-sm-12.col-xs-12
                                    input(type='text', name='txt', placeholder='Company Name')
                                .col-md-6.col-sm-12.col-xs-12
                                    input(type='email', name='email', placeholder='Email')
                                .col-md-6.col-sm-12.col-xs-12
                                    input(type='text', name='text', placeholder='Phone')
                                .col-md-12.col-sm-12.col-xs-12
                                    select.select-dropbox
                                        option Country
                                        option India
                                        option USA
                                        option London
                                .col-md-12.col-sm-12.col-xs-12
                                    textarea(placeholder='Address')
                                .col-md-12.col-sm-12.col-xs-12
                                    select.select-dropbox
                                        option Province
                                        option list 1
                                        option list 2
                                        option list 3
                                .col-md-12.col-sm-12.col-xs-12
                                    label
                                        input(type='checkbox', name='checkbox')
                                        | Create an account ?
                                .col-md-12.col-sm-12.col-xs-12
                                    h5 Shipping Address
                                .col-md-12.col-sm-12.col-xs-12
                                    label
                                        input(type='checkbox', name='checkbox')
                                        | Ship to a different address
                                        | 										?
                                .col-md-12.col-sm-12.col-xs-12
                                    textarea(placeholder='Order Notes')
                .col-md-5.col-sm-5.col-xs-12.wow.fadeInDown(data-wow-duration='1000ms', data-wow-delay='300ms')
                    .shop-checkout-right
                        .shop-checkout-box
                            h5 YOUR ORDER
                            .shop-checkout-title
                                h6
                                    | PRODUCT 
                                    span TOTAL
                            .shop-checkout-row
                                p
                                    span Rocha Sleeve Sweater
                                    |  x1 
                                    small $140.00
                                p
                                    span Mauris Tincidunt
                                    |  x6 
                                    small $140.00
                            .checkout-total
                                h6
                                    | CART SUBTOTAL 
                                    small $140.00
                            .checkout-total
                                h6
                                    | SHIPPING 
                                    small Free Shipping
                            .checkout-total
                                h6
                                    | ORDER TOTAL 
                                    small.price-big $140.00
                        .shop-checkout-box
                            h5 PAYMENT METHODS
                            label
                                input(type='radio', name='radio')
                                | Direct Bank Transfer
                            p
                                | Make your payment directly into our bank account. Please use your cleared in
                                | our account.
                            .payment-mode
                                label
                                    input(type='radio', name='radio')
                                    | Check Payments
                            .payment-mode
                                label
                                    input(type='radio', name='radio')
                                    | Cash on Delivery
                            .payment-mode
                                label
                                    input(type='radio', name='radio')
                                    |  PayPal
                                a(href='#')
                                    img(src='images/images-paycart.png', alt='')
                                a(href='#')
                                    | What is
                                    | PayPal?
                            .checkout-terms
                                label
                                    input(type='checkbox', name='checkbox')
                                    | Iâ€™ve read and accept the
                                    | 									terms & conditions *
                            .checkout-button
                                a(href="ordercomplete")
                                    button.button-default.btn-large.btn-primary-gold PROCEED TOPAYMENT